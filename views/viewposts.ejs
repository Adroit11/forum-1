<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <% include partials/head %>

</head>
<body>
        <% include partials/header %>
        <div class="row">
          <div class="col-md-12">
            <h2><%= topic[0].title %></h2><hr>
          </div>
				<% for(var i=0; i < posts.length; i++) {
							%>

                  <div class="col-md-12">
                        <div class="panel panel-default">
                          <div class="panel-heading">
                            <img src="/images/user.png" height="50px" title="<%= posts[i].username %>" class="img-circle">  <u><%= posts[i].username %></u>
                            <br><span class=""><i><%= posts[i].timestamp %></i></span>
                            <a class="btn pull-right btn-sm" style="text-decoration:none;" href="/topic/editreply/<%= posts[i].postid %>"><span style="font-size:20px;" class="fa fa-edit"></span></a>
                            <h5><%= posts[i].title %></h5>
                          </div>
                          <div class="panel-body">
                            <%= posts[i].message %>
                          </div>
                        </div>
                  </div>


        <% } %>
        <div class="col-md-12">
          <a href="/topic/addreply/<%= topicid %>" class="btn btn-success pull-right">Post a Reply</a>
        </div>
        </div>
        <% include partials/footer %>
</body>
</html>
